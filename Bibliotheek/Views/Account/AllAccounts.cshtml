@using Bibliotheek.Models
@model RegisterModel
@{
    ViewBag.Title = "Alle gebruikers";
    var accountInfo = AccountModel.AllUsers();
}

<div class="span8 page-content">

    <article class="type-page hentry clearfix">
        <h1 class="post-title">
            <a href="#">Alle gebruikers</a>
        </h1>
        <hr>
    </article>

    <p>
        <table class="table table-hover sortable">
            <thead>
                <tr>
                    <th>
                        Naam
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 1; i <= accountInfo.Count / 3; i++)
                {
                    <tr>
                        <td>
                            @accountInfo[i * 3 - 2]
                        </td>
                        <td>
                            @accountInfo[i * 3 - 1]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </p>
</div>

<aside class="span4 page-sidebar">
    @Html.Partial("_NewBook")
</aside>