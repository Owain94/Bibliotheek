@using Bibliotheek.Models
@{
    ViewBag.Title = "Boek";
    var id = Url.RequestContext.RouteData.Values["id"].ToString();
    var bookInfo = BookModel.SelectBookById(id);
}

<div class="span8 page-content">

    <article class="type-page hentry clearfix">
        <h1 class="post-title">
            <a href="#">
                Boek informatie
            </a>
        </h1>
        <hr>
    </article>

    <p>
        <table>
            <tr>
                <td width="60px">
                    Titel:
                </td>
                <td>
                    @bookInfo.Split('|')[0]
                </td>
            </tr>
            <tr>
                <td>
                    Auteur:
                </td>
                <td>
                    @Html.ActionLink(bookInfo.Split('|')[1], "SingleAuthor", "Book", new { name = bookInfo.Split('|')[1] }, null)
                </td>
            </tr>
            <tr>
                <td>
                    Genre:
                </td>
                <td>
                    @Html.ActionLink(BookModel.DictGenreFromInt[Convert.ToInt16(bookInfo.Split('|')[2])], "Genre", "Book", new { genre = bookInfo.Split('|')[2] }, null)
                </td>
            </tr>
            <tr>
                <td>
                    ISBN:
                </td>
                <td>
                    @bookInfo.Split('|')[3]
                </td>
            </tr>
            <tr>
                <td>
                    Locatie:
                </td>
                <td>
                    @BookModel.DictFloorsFromInt[Convert.ToInt16(bookInfo.Split('|')[4])] verdieping, @BookModel.DictRacksFromInt[Convert.ToInt16(bookInfo.Split('|')[5])] rek
                </td>
            </tr>
        </table>
    </p>
</div>

<aside class="span4 page-sidebar">
    @Html.Partial("_NewBook")
</aside>